{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",

    "strict": true,
    // "strictFunctionTypes": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ES2022"
    },
    "transpileOnly": true,
    "files": true
  },
  "include": ["server/*"],
  "exclude": ["node_modules"]
}
